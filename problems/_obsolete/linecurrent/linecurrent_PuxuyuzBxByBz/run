# Load environment.
# . use_research-3.10

# Created 50x50x50 training grid.
# create_training_points.py 0 1 50 -1 1 50 -1 1 50 > linecurrent_PuxuyuzBxByBz_training_grid.dat

# Create 50x50 initial conditions.
# linecurrent_PuxuyuzBxByBz_create_initial_conditions.py 0 1 50 -1 1 50 -1 1 50 > linecurrent_PuxuyuzBxByBz_initial_conditions.dat

# Define problem location.
PINN_ROOT=$HOME/research_local/src/pinn
PROBLEM_ROOT=$PINN_ROOT/problems/linecurrent/linecurrent_nPuxuyuzBxByBz

# Define PINN command.
PINN_CMD=$PINN_ROOT/pinn/pinn1.py

# Run the network.
$PINN_CMD -d -v \
  --seed=0 \
  --max_epochs=10000 \
  --save_model \
  --save_weights \
  --n_layers=4 \
  --n_hid=100 \
  --data $PROBLEM_ROOT/linecurrent_PuxuyuzBxByBz_initial_conditions.dat \
  -w 0.95 \
  $PROBLEM_ROOT/linecurrent_PuxuyuzBxByBz.py \
  $PROBLEM_ROOT/linecurrent_PuxuyuzBxByBz_training_grid.dat \
  >& pinn1.out


