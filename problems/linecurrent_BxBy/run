# Load environment.
# . use_research-3.10

# Created 50x50x50 training grid.
# create_training_points.py 0 1 50 -1 1 50 -1 1 50 > linecurrent_BxBy_training_grid.dat

# Create 50x50 initial conditions.
# create_linecurrent_BxBy_initial_conditions.py 0 1 50 -1 1 50 -1 1 50 > linecurrent_BxBy_initial_conditions.dat

# Define problem location.
PROBLEM_ROOT=$HOME/research_local/src/pinn/problems/linecurrent_BxBy

# Run the network.
pinn1.py -d -v \
  --max_epochs=10000 \
  --n_layers=4 \
  --n_hid=100 \
  --data $PROBLEM_ROOT/linecurrent_BxBy_initial_conditions.dat \
  -w 0.95 \
  $PROBLEM_ROOT/linecurrent_BxBy.py \
  $PROBLEM_ROOT/linecurrent_BxBy_training_grid.dat \
  >& pinn1.out


